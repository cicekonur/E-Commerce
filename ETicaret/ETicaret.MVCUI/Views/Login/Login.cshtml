                        @using (Html.BeginForm("KisiEkle", "Login"))
                        {
                            <div class="md-form form-sm mb-4">
                                @Html.LabelFor(i => i.Login.EMail)
                                @Html.TextBoxFor(i => i.Login.EMail, new { @class = "form-control form-control-sm validate" })
                                @Html.ValidationMessageFor(i => i.Login.EMail)
                            </div>

                            <div class="md-form form-sm mb-4">
                                @Html.LabelFor(i => i.Login.Sifre)
                                @Html.PasswordFor(i => i.Login.Sifre, new { @class = "form-control form-control-sm validate" })
                                @Html.ValidationMessageFor(i => i.Login.Sifre)
                            </div>

                            <div class="md-form form-sm mb-4">
                                @Html.Label("Şifre Tekrar")
                                @Html.PasswordFor(i => i.Login.Sifre, new { @class = "form-control form-control-sm validate" })
                                @Html.ValidationMessageFor(i => i.Login.Sifre)
                            </div>

                            <div class="text-center mt-2">
                                <button type="submit" class="btn btn-info">Kayıt Ol <i class="fas fa-sign-in ml-1"></i></button>
                            </div>
                        }

                    </div>

                    <!--Footer-->
                    <div class="modal-footer">
                        <div class="options text-right">
                            <p class="pt-1">Zaten bir hesabınız var mı? <a href="#panel7" class="blue-text">Giriş Yap</a></p>
                        </div>
                        <div type="button" class=" waves-effect ml-auto" data-dismiss="modal"></div>
                    </div>
                </div>
                <!--/.Panel 8-->
            </div>

        </div>
    </div>
    <!--/.Content-->
</div>
